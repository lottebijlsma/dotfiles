#!/usr/bin/env bash

cd "$(dirname "${BASH_SOURCE}")";

function install() {
  rsync --exclude ".git/" \
        --exclude ".DS_Store" \
        --exclude ".gitignore" \
        --exclude ".macos" \
        --exclude "bin/" \
        --exclude "README.md" \
        -avh --no-perms ../ ~;

  source ~/.bash_profile;
}

install;
unset install;
