# Committing
alias ga="git add"
alias gaa="git add ."
alias gc="git commit -m"

# Branching
alias gbl="git branch -l"
alias gco="git checkout"
alias gmr="git merge"

# Remotes
alias gcl="git clone"
alias gpl="git pull"
alias gps="git push"
alias gpt="git push --tags"
alias gpf="git push --force"
alias gro="git remote add origin"

# Deployment
alias gph="git push heroku master"
alias gphd="git push heroku develop:master"
alias ghr="heroku git:remote -a"
alias gprm="git push resin master"

# Controlling
alias gd="git diff"
alias glog="git log"
alias gs="git status"

# Squash Commits function
function gsq() {
  if [ -z $1 ]; then
    echo "Please provide amount to squash"
    return 1
  fi
  git rebase -i HEAD~$1
}

# `cd` to the root of a Git project
function gcd() {
  TEMP_PWD=`pwd`
  while ! [ -d .git ]; do
    cd ..
  done
  OLDPWD=$TEMP_PWD
}

# Check out a PR from Github as a local branch
function gpr() {
  if [ -z $1 ]; then
    echo "Pass in a PR id"
    return 1
  fi
  git fetch origin pull/$1/head:pr/$1
  git checkout pr/$1
}
